{
  "name": "better-auth-razorpay",
  "author": "",
  "version": "2.0.4",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamjasonkendrick/better-auth-razorpay.git"
  },
  "keywords": [
    "razorpay",
    "auth",
    "subscription",
    "better-auth"
  ],
  "module": "dist/index.js",
  "description": "Razorpay plugin for Better Auth",
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage --coverage.provider=istanbul",
    "lint:package": "npx --yes publint run --strict",
    "lint:types": "npx --yes @arethetypeswrong/cli --profile esm-only --pack .",
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --project tsconfig.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "dev-source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "dev-source": "./src/client.ts",
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ],
      "client": [
        "./dist/client.d.ts"
      ]
    }
  },
  "dependencies": {
    "defu": "^6.1.4",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "better-auth": "*",
    "razorpay": "^2.9.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "better-auth": "^1.2.10",
    "better-call": "^1.0.10",
    "razorpay": "^2.9.6",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  }
}
